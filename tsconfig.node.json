{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2023"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["server/**/*", "vite.config.mts"],
  "exclude": ["node_modules"]
}
